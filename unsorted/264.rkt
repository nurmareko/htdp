; determines the largest  number on l
(define (sup l)
  (cond
    [(empty? (rest l))
     (first l)]
    [else
     (local ((define greatest-in-rest (sup (rest l))))
       ; - IN -        
       (if (> (first l)
              greatest-in-rest)
           (first l)
           greatest-in-rest))]))

